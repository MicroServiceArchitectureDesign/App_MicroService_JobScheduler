@model List<App_MicroService_JobScheduler.Models.JobServiceEntities.JobsDetail>
@{
    Layout = null;
}
<div class="row">
    <div class="col-12 col-lg-10 col-md-10 container justify-content-center">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h5 class="mt-2 fw-normal">All jobs</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Name</th>
                            <th>Cron Expression</th>
                            <th>IsActive</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span data-toggle="tooltip" title="Job is actively running" class="fa fa-check-circle fa-2xl text-success"></span>
                                    }
                                    else
                                    {
                                        <span data-toggle="tooltip" title="Job is not running" class="fa fa-xmark-circle fa-2xl text-danger"></span>
                                    }
                                </td>
                                <td>
                                    @item.Name
                            </td>
                            <td>@item.CronExpression</td>
                            <td>
                                <select asp-for="@item.IsActive" onchange="OnIsActiveChange(@item.Id,this)" class="form-control form-select form-select-sm ">
                                    <option value="true">True</option>
                                    <option value="false">False</option>
                                </select>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" hx-get="/JobDetail/Update/@item.Id" hx-target="#content-body">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        function OnIsActiveChange(id, e) {
            var model = {
                id: id,
                isActive: $(e).val()
            };

            $.post('/JobDetail/UpdateJobIsActiveStatus', model, function (response) {
                window.location.reload();
            });
        }
    </script>

}
